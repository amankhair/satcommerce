<!-- Product Card -->
<div class="card card-product card-hover">
    <a class="card-img-top" href="shop-single.html">
        <img src="@Product.ImageUrl" alt="@Product.Name" />
    </a>
    <div class="card-body">
        <a class="meta-link font-size-xs mb-1" href="#">@Product.ProductType</a>
        <h3 class="font-size-md font-weight-medium mb-2">
            <a class="meta-link" href="shop-single.html">@Product.Name</a>
        </h3>
        <span class="text-heading font-weight-semibold">$@Product.Price</span>
    </div>
    <div class="card-footer">
        <div class="star-rating">
            <i class="sr-star fe-star-filled active"></i>
            <i class="sr-star fe-star-filled active"></i>
            <i class="sr-star fe-star-filled active"></i>
            <i class="sr-star fe-star"></i>
            <i class="sr-star fe-star"></i>
        </div>
        <div class="d-flex align-items-center">
            <a class="btn-wishlist" href="#">
                <i class="fe-heart"></i>
                <span class="btn-tooltip">Wishlist</span>
            </a>
            <span class="btn-divider"></span>
            <a class="btn-addtocart" href="#">
                <i class="fe-shopping-cart"></i>
                <span class="btn-tooltip">To Cart</span>
            </a>
        </div>
    </div>
</div>
<!-- End Product Card -->