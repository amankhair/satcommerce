@page "/shop/p/{ProductId:long}"
<!-- Product gallery + info-->
<section class="py-5">
    <div class="container">
        <div class="row pb-md-2">
            @if (ProductDto != null)
            {
                <div class="col-md-7 cs-content py-4">

                    <nav aria-label="breadcrumb">
                        <ol class="py-1 my-2 breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item">
                                <a href="#">Shop</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Single product</li>
                        </ol>
                    </nav>


                    <!-- Product gallery-->

                    <div class="cs-product-gallery">
                        <div class="cs-preview order-sm-2">
                            <div class="cs-preview-item active" id="first">
                                <img src="@ProductDto.ImageUrl" alt="Product preview" />
                            </div>
                            <div class="cs-preview-item" id="second">
                                <img src="@ProductDto.ImageUrl" alt="Product preview" />
                            </div>
                            <div class="cs-preview-item" id="third">
                                <img src="@ProductDto.ImageUrl" alt="Product preview" />
                            </div>
                            <div class="cs-preview-item" id="fourth">
                                <img src="@ProductDto.ImageUrl" alt="Product preview" />
                            </div>
                        </div>
                        <div class="cs-thumblist order-sm-1">
                            <a class="cs-thumblist-item active" href="#first">
                                <img src="@ProductDto.ImageUrl" alt="Product thumb" />
                            </a>
                            <a class="cs-thumblist-item" href="#second">
                                <img src="@ProductDto.ImageUrl" alt="Product thumb" />
                            </a>
                            <a class="cs-thumblist-item" href="#third">
                                <img src="@ProductDto.ImageUrl" alt="Product thumb" />
                            </a>
                            <a class="cs-thumblist-item" href="#fourth">
                                <img src="@ProductDto.ImageUrl" alt="Product thumb" />
                            </a>
                        </div>
                    </div>

                </div>

                <div class="col-md-5 cs-sidebar bg-secondary pt-5 px-lg-5 pb-md-2">
                    <h3 class="h5">@ProductDto.Name</h3>

                    <p class="font-size-sm mb-4 pb-2">@ProductDto.Description</p>

                    <a class="d-inline-block text-decoration-none" href="#reviews" data-scroll="">
                        <div class="star-rating-lg mt-n1 mr-2 star-rating">
                            <i class="sr-star fe-star-filled active"></i><i class="sr-star fe-star-filled active"></i><i class="sr-star fe-star-filled active"></i><i class="sr-star fe-star-filled active"></i><i class="sr-star fe-star"></i>
                        </div><span class="text-body font-size-sm">(4.2) based on 15 reviews</span>
                    </a>

                    <div class="py-4">
                        <del class="text-muted mr-2">$140.00</del><span class="h4 mb-0">@ProductDto.Price</span>
                    </div>

                    <div class="d-flex mt-4 mb-3">
                        <input class="form-control mr-3" type="number" style="width: 5rem;border-radius: 0;" value="1">
                        <button class="btn btn-primary" style="border-radius: 0;" type="button">Add to Cart</button>
                    </div>
                    <button class="btn btn-outline-secondary btn-block mb-grid-gutter" style="border-radius: 0;" type="button"><i class="fe-heart font-size-lg mr-2"></i>Add to Wishlist</button>
                </div>
            }
        </div>
    </div>
</section>